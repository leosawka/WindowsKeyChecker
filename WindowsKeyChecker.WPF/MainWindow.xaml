<Window x:Class="WindowsKeyChecker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Key Checker" Height="350" Width="500" Background="#282c34">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Windows Key Checker" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Ver Activación (/dli)" Click="BtnCheckActivation_Click" Height="30" Margin="0,5"/>
            <Button Content="Info Detallada (/dlv)" Click="BtnDetailedInfo_Click" Height="30" Margin="0,5"/>
            <Button Content="Ver Expiración (/xpr)" Click="BtnExpiration_Click" Height="30" Margin="0,5"/>

            <TextBlock Text="Resultado:" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
            <TextBox Name="txtOutput" Height="100" IsReadOnly="True" TextWrapping="Wrap" Background="Black" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
